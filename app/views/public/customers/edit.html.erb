
<div class="container">
    <h2>顧客側情報編集</h2>
    
<%= form_with model: @customer,url: customers_path do |f| %>

    <div class="row justify-content-center">
        <div class="col-md-3 pt-3 text-center">
            <%= f.label :name, '名前' %>
        </div>
        <div class="col-md-9 pt-3">
            <%= f.text_field :name, class: 'form-control' %>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-3 pt-3 text-center">
            <%= f.label :email, 'メールアドレス' %>
        </div>
        <div class="col-md-9 pt-3">
            <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
        </div>
    </div>
    <div class="row pt-5">
        <div class="col-6 text-center">
            <%= f.submit '編集内容を保存' %>
        </div>
        <div class="col-6 text-center">
            <%= link_to '退会する', customers_unsubscribe_path, class:"btn btn-danger" %>
        </div>
    </div>
   <% end %>
</div>