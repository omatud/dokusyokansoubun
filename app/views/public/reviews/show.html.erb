
<div class="container">
  <h2>レビュー詳細</h2>
  <div class="row justify-content-center">
    <div class="col-md-6 text-right">
      投稿者名
    </div>
    <div class="col-md-6">
      <%= @review.customer.name %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6 pt-2 text-right">
      タイトル名
    </div>
    <div class="col-md-6 pt-2">
      <%= @review.title %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6 pt-2 text-right">
      作者名
    </div>
    <div class="col-md-6 pt-2">
      <%= @review.author %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6 pt-2 text-right">
      サイト名
    </div>
    <div class="col-md-6 pt-2">
      <%= @review.site %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6 pt-2 text-right">
      タグ名
    </div>
    <div class="col-md-6 pt-2">
    </div>
  </div>
  <ul>
  <div class="row justify-content-center">
    <% @review.tags.each do |tag| %>
    <div class="col pt-2">
      <li><%= tag.name %></li>
    </div>
    <% end %>
  </div>
  </ul>
  <div class="row justify-content-center">
    <div class="col-md-6 pt-2 text-right">
      レビュー
    </div>
    <div class="col-md-6 pt-2">
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col pt-2 ">
      <h5><%= @review.review %></h5>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <td>
          レビュー
        </td>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          レビュー
        </td>
      </tr>
    </tbody>
  </table>

</div>

<div class="row justify-content-center">
  <div class="col-8 pt-3 text-right">
