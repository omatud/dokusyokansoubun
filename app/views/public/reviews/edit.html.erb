
<div class="container">

  <h1>投稿編集</h1>

  <%= form_with model: @review, url: review_path, method: :post do |f| %>

  <div class="row justify-content-center">
    <div class="col pt-3 text-center">
      タイトル名
    </div>
    <div class="col pt-3">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col pt-3 text-center">
      作者名
    </div>
    <div class="col pt-3">
      <%= f.text_field :author %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col pt-3 text-center">
      サイト名
    </div>
    <div class="col pt-3">
      <%= f.text_area :site %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col pt-3 text-center">
      タグ選択
    </div>
    <div class="col pt-3">
      <%= f.collection_select(:tag_id, @tags, :id, :name) %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col pt-3 text-center">
      レビュー
    </div>
    <div class="col pt-3">
      <%= f.text_area :review %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col pt-3 text-center">
      <%= f.submit"更新" %>
    </div>
  </div>
  <% end %>
</div>