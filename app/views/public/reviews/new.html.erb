
<div class="container">

  <h1>新規レビュー投稿</h1>

  <%= form_with model: @review, url: reviews_path, method: :post do |f| %>

  <div class="row justify-content-center">
    <div class="col-md-3 pt-3 text-center">
      <%= f.label :title, 'タイトル名' %>
    </div>
    <div class="col-md-9 pt-3">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-3 pt-3 text-center">
      <%= f.label :author, '作者名' %>
    </div>
    <div class="col-md-9 pt-3">
      <%= f.text_field :author,class: 'form-control' %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-3 pt-3 text-center">
      <%= f.label :site, 'サイト名' %>
    </div>
    <div class="col-md-9 pt-3">
      <%= f.text_area :site,class: 'form-control' %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-3 pt-3 text-center">
      タグ選択
    </div>
    <div class="col-md-9 pt-3">
      <%= f.collection_check_boxes(:tag_ids, @tags, :id, :name) do |b| %>
        <%= b.label { b.check_box + b.text } %>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-3 pt-3 text-center">
      <%= f.label :review, 'レビュー' %>
    </div>
    <div class="col-md-9 pt-3">
      <%= f.text_area :review,class: 'form-control' %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col pt-3 text-center">
      <%= f.submit"レビュー制作" %>
    </div>
  </div>
  <% end %>
</div>