<div class="container">

  <h1>レビュー一覧</h1>

  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th>レビューid</th>
            <th>投稿者名</th>
            <th>タイトル名</th>
            <th>詳細</th>
          </tr>
        </thead>

        <% @reviews.each do |review| %>

        <tbody>
          <td><%= review.id %></td>
          <td><%= review.customer.name %></td>
          <td><%= review.title %></td>
          <td><%= link_to "詳細", admin_review_path(review.id), class:"btn btn-primary" %></td>

        </tbody>

        <% end %>

      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-2 offset-5">
      <%= paginate @reviews %>
    </div>
  </div>
</div>
